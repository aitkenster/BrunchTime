<h1>New Restaurant</h1>

<%= form_for :restaurant, url: restaurants_path do |form| %>
	<p>
		<%= form.label :name %><br>
		<%= form.text_field :name %>
	</p>

	<p>
		<%= form.label :cuisine %><br>
		<%= form.text_field :cuisine %>
	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>

<%= link_to 'Home', restaurants_path %>